{
  "name": "@napi-ffi/ffi-napi",
  "version": "4.0.3",
  "license": "MIT",
  "author": "Anna Henningsen <anna@addaleax.net>",
  "contributors": [
    "Rick Branson <rick@diodeware.com>",
    "Nathan Rajlich <nathan@tootallnate.net>",
    "Gabor Mezo <gabor.mezo@outlook.com>"
  ],
  "maintainers": [
    "Gilson Urbano <hello@gilsonurbano.com>"
  ],
  "description": "A foreign function interface (FFI) for Node.js, N-API style",
  "keywords": [
    "foreign",
    "function",
    "interface",
    "ffi",
    "libffi",
    "binding",
    "c",
    "napi",
    "stable"
  ],
  "homepage": "https://github.com/napi-ffi/node-ffi-napi",
  "engines": {
    "node": ">=10"
  },
  "main": "./lib/ffi",
  "dependencies": {
    "debug": "^4.3.7",
    "@napi-ffi/get-uv-event-loop-napi-h": "^1.0.6",
    "node-addon-api": "^8.2.1",
    "node-gyp-build": "^4.8.2",
    "@napi-ffi/ref-napi": "^3.0.5",
    "@napi-ffi/ref-struct-di": "^1.1.1"
  },
  "devDependencies": {
    "fs-extra": "^11.2.0",
    "mocha": "^7.1.1",
    "nyc": "^17.1.0",
    "prebuildify": "^6.0.1",
    "prebuildify-ci": "^1.0.5",
    "@napi-ffi/ref-array-di": "^1.2.2"
  },
  "scripts": {
    "install": "node-gyp-build",
    "build": "node-gyp rebuild",
    "prebuild": "prebuildify --napi --tag-armv --tag-uv --strip",
    "prepack": "prebuildify-ci download && ([ $(ls prebuilds | wc -l) > '0' ] || (echo 'Some prebuilds are missing'; exit 1))",
    "test": "node-gyp rebuild --directory test && nyc mocha --expose-gc --reporter spec"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/napi-ffi/node-ffi-napi.git"
  },
  "bugs": {
    "url": "https://github.com/napi-ffi/node-ffi-napi/issues"
  }
}
